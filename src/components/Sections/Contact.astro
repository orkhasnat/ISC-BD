<style>
  .ff {
    font-family: "Inter Variable", sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
  }
  .flc > * {
    /* flex-grow: 1; */
    flex-basis: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .icon {
    border-radius: 50%;
    background: #bc7464;
    padding: 20px;
    margin-bottom: 1rem;
  }
  #flip {
    transition: transform 0.4s ease;
  }
  #flip:hover {
    transform: scale(1.25);
  }
  #flip > * {
    transition: transform 0.4s ease;
  }
  #flip:hover > * {
    transform: rotateY(180deg);
  }
</style>


---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import map from "@/assets/gallery/map.webp";
---

<section id="contact" class="py-24 bg-zinc-950 text-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-heading font-bold mb-4 text-primary">Contact Us</h2>
        <p class="text-white/60">Get in touch with us.</p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Contact Info -->
        <div class="flex flex-col gap-8">
            <div class="flex items-start gap-4 p-6 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors">
                <div class="p-3 bg-primary/20 rounded-full text-primary shrink-0">
                    <Icon name="mdi:location" class="text-2xl" />
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-2">Address</h3>
                    <a href="https://maps.app.goo.gl/RzKB4opaeAQwbNKc9" class="hover:text-primary transition-colors text-white/80">
                        1048, East Monipur, Kathaltola, Section-2, Mirpur, Dhaka-1216
                    </a>
                </div>
            </div>

            <div class="flex items-start gap-4 p-6 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors">
                <div class="p-3 bg-primary/20 rounded-full text-primary shrink-0">
                    <Icon name="mdi:email" class="text-2xl" />
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-2">Email</h3>
                    <div class="flex flex-col gap-1 text-white/80">
                        <a href="mailto:isc.bd2022@gmail.com" class="hover:text-primary transition-colors">isc.bd2022@gmail.com</a>
                        <!-- <a href="mailto:anik.asad.72@gmail.com" class="hover:text-primary transition-colors">anik.asad.72@gmail.com</a> -->
                    </div>
                </div>
            </div>

            <div class="flex items-start gap-4 p-6 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 transition-colors">
                <div class="p-3 bg-primary/20 rounded-full text-primary shrink-0">
                    <Icon name="mdi:phone" class="text-2xl" />
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-2">Phone</h3>
                    <div class="flex flex-col gap-1 text-white/80">
                        <a href="tel:+880-1730011702" class="hover:text-primary transition-colors">+880-1730011702</a>
                        <a href="tel:+880-1710845597" class="hover:text-primary transition-colors">+880-1710845597</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Image -->
        <div class="relative overflow-hidden rounded-2xl border border-white/10 bg-white/5">
            <h3 class="text-xl font-bold font-heading mb-6 p-6 pb-0">Our Working Area</h3>
            <Image src={map} alt="Map of working area" class="w-full h-auto object-cover opacity-90 transition-opacity hover:opacity-100" />
        </div>
    </div>
  </div>
</section>

---
import { Image } from "astro:assets";
// Using one hero image for now for better LCP
import heroImage from "@/assets/cover/collage.webp";
---

<section class="relative h-screen w-full overflow-hidden flex items-center justify-center">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <Image 
            src={heroImage} 
            alt="ISC Activity Collage" 
            class="h-full w-full object-cover object-center brightness-50"
            loading="eager"
        />
    </div>

    <!-- Content -->
    <div class="relative z-10 px-4 text-center">
        <h1 class="mx-auto mb-6 max-w-4xl font-heading text-5xl font-bold text-white drop-shadow-xl md:text-7xl lg:text-8xl animate-fade-in opacity-0" style="animation-delay: 0.2s">
            Initiative for Social Change
        </h1>
        <p class="mx-auto mb-10 max-w-2xl text-lg text-white/90 md:text-2xl animate-fade-in opacity-0" style="animation-delay: 0.5s">
            Working to create a society that values the dignity and freedom of lives on earth.
        </p>
        <div class="animate-fade-in opacity-0" style="animation-delay: 0.8s">
            <a href="#projects" class="rounded-full bg-primary px-8 py-3 text-lg font-semibold text-white transition-all hover:bg-primary/90 hover:shadow-lg hover:-translate-y-1">
                See Our Projects
            </a>
        </div>
    </div>
    
    <!-- Scroll Down indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce text-white/80">
        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
    </div>
</section>

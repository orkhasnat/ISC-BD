---
import Card from "@/components/helper/Card.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");

const cutOffLength = 100;
---

<section id="projects" class="py-24 bg-muted/30">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-heading font-bold text-foreground mb-4">Our Projects</h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
                Discover how we are making a difference in communities through education, environment, and social welfare initiatives.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                <Card
                    heading={project.data.title}
                    image={project.data.coverImage}
                    body={project.data.description}
                    link={`/projects/${project.slug}/`}
                    loading="eager"
                />
            ))}
        </div>
    </div>
</section>

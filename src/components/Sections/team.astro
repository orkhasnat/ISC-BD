---
import { Image } from "astro:assets";

import zohir from "@/assets/team/zohir.webp";
import anik from "@/assets/team/anik.webp";
import hasnat from "@/assets/team/hasnat.webp";
import moni from "@/assets/team/moni.webp";
import bari from "@/assets/team/bari.webp";
import sidd from "@/assets/team/sid.webp";

const team = [
  {
    name: "D.M Abdul Bari",
    title: "Chairperson",
    image: bari,
    description: "Advocate and Founder President of Ekushe Parishod, Naogaon. A renowned social reformer working for the development of marginalized people."
  },
  {
    name: "Dr. Siddiqur Rahman",
    title: "Treasurer", 
    image: sidd,
    description: "Professor of Anthropology at Jahangirnagar University. Leading researcher on indigenous people and climate change."
  },
  {
    name: "Abul Hasnat",
    title: "Executive Director",
    image: hasnat,
    description: "Expert in Finance, Accounts & Administration. Leading ISC as Director Finance & Operation with accountability and responsibility."
  },
  {
    name: "Sabikun Nahar",
    title: "Monitoring and Documentation Officer",
    image: moni,
    description: "Champion in documentation and monitoring. Skilled in designing M&E systems and data analysis."
  },
  {
    name: "Md. Zohir Hossen",
    title: "Accounts & Finance Officer",
    image: zohir,
    description: "Handles accounting duties, financial reporting, and audits. Ensures timely submission of reports to donors."
  },
  // {
  //   name: "Anik Asad",
  //   title: "Legacy Founder",
  //   image: anik,
  //   description: "Anthropologist and Human Rights Activist. Founder executive director."
  // }
];
---

<div class="py-12">
  <h2 class="text-3xl font-heading font-bold text-center mb-12">Meet Our Team</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {team.map((member) => (
      <div class="group relative overflow-hidden rounded-xl bg-card border border-border/50 shadow-sm hover:shadow-lg transition-all hover:-translate-y-1">
        <div class="aspect-[4/3] overflow-hidden">
          <Image src={member.image} alt={member.name} class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold font-heading text-foreground">{member.name}</h3>
          <p class="text-sm font-medium text-primary mb-3">{member.title}</p>
          <p class="text-muted-foreground text-sm leading-relaxed line-clamp-4">
            {member.description}
          </p>
        </div>
      </div>
    ))}
  </div>
</div>

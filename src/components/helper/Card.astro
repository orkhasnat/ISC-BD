---
import { Image } from "astro:assets";
const { heading, body, image, link, loading = "lazy" } = Astro.props;
---

<div class="group relative overflow-hidden rounded-xl bg-card shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-md border border-border/50">
    <a href={link} class="block h-full">
        <div class="relative overflow-hidden aspect-[4/3]">
            <Image src={image} alt="" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <div class="p-6">
            <h3 class="mb-2 text-xl font-heading font-bold text-foreground group-hover:text-primary transition-colors">
                {heading}
            </h3>
            <div class="line-clamp-3 text-sm text-muted-foreground leading-relaxed">
                <Fragment set:html={body} />
            </div>
            <div class="mt-4 flex items-center text-sm font-medium text-primary">
                Read more 
                <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m0-4H3" />
                </svg>
            </div>
        </div>
    </a>
</div>
